<%= form_for @task do |f| %>

	<div class="form-group">
		<%= f.text_area :description, placeholder: "Describe your task!" %>
	</div>
	<div class="form-group" style="position: relative">
		<%= f.text_field :deadline, placeholder: "When's it due?" %>
	</div>
	<div class="actions">
		<%= f.submit "Submit" %> 
	</div>

<% end %>